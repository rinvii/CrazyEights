<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crazyeights.CEMainActivity">

    <edu.up.cs301.crazyeights.views.CESurfaceView
        android:id="@+id/ourView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-191dp"
        tools:layout_editor_absoluteY="26dp" />

    <LinearLayout
        android:id="@+id/PlayerIcons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Player0"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="7"
            android:src="@drawable/player1"
            android:translationY="5dp" />

        <ImageView
            android:id="@+id/Player1"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="7"
            android:src="@drawable/player2"
            android:translationY="5dp" />

        <ImageView
            android:id="@+id/Player2"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="7"
            android:src="@drawable/player3"
            android:translationY="5dp" />

        <ImageView
            android:id="@+id/Player3"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="7"
            android:src="@drawable/player4"
            android:translationY="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Scores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Player0Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_weight="7"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#EFE5E5"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/Player1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_weight="7"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#EFE5E5"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/Player2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_weight="7"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#EFE5E5"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/Player3Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_weight="7"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#EFE5E5"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PlayerNames"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Player0Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="7"
            android:text="Player 0"
            android:textAlignment="center"
            android:textColor="#F6F5F5"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="7"
            android:text="Player 1"
            android:textAlignment="center"
            android:textColor="#937EB8"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="7"
            android:text="Player 2"
            android:textAlignment="center"
            android:textColor="#7CDA80"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/Player3Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_weight="7"
            android:text="Player 3"
            android:textAlignment="center"
            android:textColor="#2196F3"
            android:textSize="25sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
